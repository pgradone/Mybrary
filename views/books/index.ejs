<h2>Search Books</h2>
<form action="/books" method="GET">
  <div>
    <label for="title">Name</label>
    <input
      type="text"
      name="title"
      id="title"
      value="<%= searchOptions.title %>"
    />
  </div>
  <div>
    <label for="publishedAfter">Published After</label>
    <input
      type="date"
      name="publishedAfter"
      id="publishedAfter"
      value="<%= searchOptions.publishedAfter %>"
    />
  </div>
  <div>
    <label for="publishedBefore">Published Before</label>
    <input
      type="date"
      name="publishedBefore"
      id="publishedBefore"
      value="<%= searchOptions.publishedBefore %>"
    />
  </div>
  <button type="submit">Search</button>
</form>
<br />
<div>
  <% books.forEach(book => { %>
  <img
    height="150"
    width="100"
    src="<%= book.coverImagePath %>"
    alt="cover image"
  />
  <% }) %>
</div>
